<!DOCTYPE html>
<html lang="pt-br">

<head>
    <title> eventos </title>
    <meta chartset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- CSS Externos -->
    <link href="stylesheets/bootstrap.css" rel="stylesheet">
    <link href="stylesheets/promotora.css" rel="stylesheet">
    <!-- Fonte Ballo Da 2 e Poppins -->
    <link href="https://fonts.googleapis.com/css?family=Baloo+Da+2|Pangolin|Poppins&display=swap" rel="stylesheet">
</head>

<body>
    <!-- Cabeçalho -->
    <header class="align-self-center shadow-sm p-3 mb-5 bg-white rounded">
        <div id="container" class="container">
            <div class="row">
                <a href="/"> <h2 class="titulo"> Promotora </h2> </a>
            </div>
        </div>
    </header>
    <!-- Main -->
    <main>
        <section>
            <div class="container-fluid">
                <div class="row">
    
                    <!-- Menu Lateral -->
                    <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12 text-center text shadow-sm p-3 mb-5 bg-white rounded">
                        <div class="titulo mb-4">
                            <a href="/eventosPromotora" class="text"> Seus Eventos </a>
                        </div>
                        <div class="titulo mb-4">
                            <a href="/criarEventoPromotora" class="text"> Criar Evento </a>
                        </div>
                        <div class="titulo">
                            <a href="/contaPromotora" class="text"> Minha Conta </a>
                        </div>
                    </div>
                    
                    <!-- Corpo da página -->
                    <div class="offset-1 col-lg-8 col-md-8 col-sm-11 col-xs-11 text shadow-sm p-3 mb-5 bg-white rounded">
                        <div class="row justify-content-center">
                            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                <h2 class="text-center titulo"> Editar Informações </h2>
                                <!-- Formulário Editar Promotora -->
                                <form action="/editarPromotora" method="POST">
                                    <!-- Input CNPJ -->
                                    <div class="form-group row mb-0">
                                        <label for="cnpj" class="col-sm-12 col-form-label"></label>
                                        <div class="col-md-12">
                                            <input type="text" class="form-control" id="cnpj" value="<%= usuario.cnpj %>" name="cnpj" placeholder="Digite o CNPJ">
                                        </div>
                                    </div>
                                    <!-- Input Nome Empresa -->
                                    <div class="form-group row mb-0">
                                        <label for="nomeEmpresa" class="col-sm-12 col-form-label"></label>
                                        <div class="col-md-12">
                                            <input type="text" class="form-control" id="nome_entidade" value="<%= usuario.nome_entidade %>" name="nome_entidade" placeholder="Digite o nome da Empresa">
                                        </div>
                                    </div>
                                    <!-- Input Estado -->
                                    <div class="form-group row mb-0">
                                        <label for="estado" class="col-sm-12 col-form-label"></label>
                                        <div class="col-md-12">
                                            <input type="text" class="form-control" id="estado" name="end_estado" value="<%= usuario.end_estado %>" placeholder="Digite o estado">
                                        </div>
                                    </div>
                                    <!-- Input Cidade -->
                                    <div class="form-group row mb-0">
                                        <label for="cidade" class="col-sm-12 col-form-label"></label>
                                        <div class="col-md-12">
                                            <input type="text" class="form-control" id="cidade" name="end_cidade" value="<%= usuario.end_cidade %>" placeholder="Digite a cidade">
                                        </div>
                                    </div>
                                    <!-- Input CEP Empresa -->
                                    <div class="form-group row mb-0">
                                        <label for="cepEmpresa" class="col-sm-12 col-form-label"></label>
                                        <div class="col-md-12">
                                            <input type="text" class="form-control" id="cepEmpresa" name="end_cep" value="<%= usuario.end_cep %>" placeholder="Digite o CEP">
                                        </div>
                                    </div>
                                    <!-- Input logradouro Empresa -->
                                    <div class="form-group row mb-0">
                                        <label for="logradouroEmpresa" class="col-sm-12 col-form-label"></label>
                                        <div class="col-md-12">
                                            <input type="text" class="form-control" id="logradouroEmpresa" name="end_logradouro" value="<%= usuario.end_logradouro %>" placeholder="Digite o Logradouro">
                                        </div>
                                    </div>
                                    <!-- Input número Empresa -->
                                    <div class="form-group row mb-0">
                                        <label for="numeroEmpresa" class="col-sm-12 col-form-label"></label>
                                        <div class="col-md-12">
                                            <input type="text" class="form-control" id="numeroEmpresa" name="end_numero" value="<%= usuario.end_numero %>" placeholder="Digite o Número">
                                        </div>
                                    </div>
                                    <!-- Input E-mail -->
                                    <div class="form-group row mb-0">
                                        <label for="email" class="col-sm-12 col-form-label"></label>
                                        <div class="col-md-12">
                                            <input type="email" class="form-control" id="email" name="email" value="<%= usuario.email %>" placeholder="Digite seu e-mail">
                                        </div>
                                    </div>
                                    <!-- Input Senha -->
                                    <div class="form-group row mb-0">
                                        <label for="password" class="col-sm-12 col-form-label"></label>
                                        <div class="col-md-12">
                                            <input type="password" class="form-control" id="password" name="password" placeholder="Digite sua senha">
                                        </div>
                                    </div>
                                    <!-- Input Confirmar Senha -->
                                    <div class="form-group row">
                                        <label for="confirmpassword" class="col-sm-12 col-form-label"></label>
                                        <div class="col-md-12">
                                            <input type="password" class="form-control" id="confirmpassword" name="confirmpassword" placeholder="Confirme sua senha">
                                        </div>
                                    </div>
                                    <!-- Botão de Login -->
                                    <div class="form-group row">
                                        <div class="col-md-12 text-center mb-3">
                                            <button type="submit" class="btn w-100 botao"> Editar Informações </button>
                                        </div>
                                    </div>
                                </form>
                                <form action="/apagarPromotora" method="POST">
                                    <div class="col-md-12 text-center">
                                        <button type="submit" class="btn w-100 botao botaoVermelho"> Apagar Conta </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>  
            </div>
        </section>
    </main>
    <script type="text/javascript" src="javascripts/jquery.js"></script>
    <script type="text/javascript" src="javascripts/bootstrap.js"></script>
</body>
</html>